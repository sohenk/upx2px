{
	"name": "upx2px",
	"displayName": "upx2px",
	"description": "upx2px",
	"version": "1.0.0",
	"publisher": "sohenk",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:html",
		"onLanguage:vue",
		"onLanguage:css",
		"onLanguage:less",
		"onLanguage:scss",
		"onLanguage:sass",
		"onLanguage:stylus",
		"onCommand:extension.upx2pxAll"
		],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.upx2px",
				"title": "upx2px"
			},
			{
				"command": "extension.upx2pxAll",
				"title": "upx2pxAll"
			}
		],
		"configuration": {
			"type": "object",
			"title": "upx2px",
			"properties": {
				"upx2px.designWidth": {
					"type": "number",
					"default": 375,
					"description": "design width (unit: px), default: 375"
				},
				"upx2px.fitWidth": {
					"type": "number",
					"default": 750,
					"description": "fit width (unit: px), default: 750"
				},
				"upx2px.fixedDigits": {
					"type": "number",
					"default": 2,
					"description": "Px to rem decimal point maximum length, default: 2"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"package": "npm package",
        "build": "npm build",
        "publish": "npm publish",
        "dev": "npm watch-build"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
